<!-- views/home.ejs
This page is the Home page which displays a list of blogs
Clicking on an item will take you to the details page -->

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>React Blog</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .jumbotron {
          margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div class="jumbotron">
            <h1>All you wanted to know about React</h1>
            <p class="lead">Check out our articles below!</p>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                  <!-- loop over blog posts and render them -->
                   <% posts.forEach((post) => { %>
				    <a href="/post/<%= post.id %>" class="list-group-item">
				      <h4 class="list-group-item-heading"><%= post.title %></h4>
				      <p class="list-group-item-text">by <b><%= post.author %></b></p>
				    </a>
				  <% }) %>
                </div>
            </div>
        </div>
        <%- include('partials/footer') %>
    </div>
</body>

</html>